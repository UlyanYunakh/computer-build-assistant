<style>
    .info {
    margin: 30px 0;
    font-size: 24px;
    font-weight: bold;
    color: #5B0CF9;
}

.cost:after {
    content: " BYN";
}
</style>
@foreach (Component component in Selection.List)
{
    <ComponentView Component=component />
}
<div class="info cost">Полная стоимость подборки: @Selection.Cost</div>
<div class="info">Ценность подборки: @Selection.Worth</div>

@code{
    [Parameter]
    public Selection Selection { get; set; }
}