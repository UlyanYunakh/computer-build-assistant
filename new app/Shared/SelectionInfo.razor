<style>
    .selection {
    width: 100%;
    margin: 30px auto;
    padding: 30px;
    border: 3px solid #4C0099;
    border-radius: 30px;
    display: flex;
    flex-direction: column;
    transition: box-shadow 0.2s;
}

.selection:hover {
    cursor: pointer;
    box-shadow: 16px -16px #5B0CF9;
}

.selection__info {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.info__cost, .info__worth {
    font-size: 24px;
    color: #4D0099;
}

.info__cost:after {
    content: " BYN";
}
</style>

<div class="selection">
    <div class="selection__title">
        @Selection.Name
    </div>
    <div class="selection__info">
        <div class="info__cost">
            @Selection.Cost
        </div>
        <div class="info__worth">
            @Selection.Worth
        </div>
    </div>
</div>

@code{
    [Parameter]
    public Selection Selection { get; set; }
}